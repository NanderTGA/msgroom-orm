{
    "compilerOptions": {
        "module"             : "NodeNext",
        "target"             : "ESNext",
        "strictFunctionTypes": true,
        "strict"             : true,
        "esModuleInterop"    : true,
        "moduleResolution"   : "NodeNext",
        "outDir"             : "./dist",
        "rootDir"            : "./src",
        "sourceMap"          : true,
        "inlineSourceMap"    : false,
        "inlineSources"      : true,
        "declaration"        : true,
        "declarationMap"     : true,
        "declarationDir"     : "./dist",
        "skipLibCheck"       : true,
        "importHelpers"      : true,
        "customConditions"   : [ "src-types" ]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}